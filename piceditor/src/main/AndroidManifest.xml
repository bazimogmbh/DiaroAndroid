<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk tools:overrideLibrary="com.hold1" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
       
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:requestLegacyExternalStorage="true"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">
    <activity
        android:name="com.sandstorm.diary.piceditor.activities.ImageEditorActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name="com.sandstorm.diary.piceditor.features.picker.PhotoPickerActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name="com.sandstorm.diary.piceditor.features.picker.PhotoPagerActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name="com.sandstorm.diary.piceditor.activities.CollageActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name="com.sandstorm.diary.piceditor.features.collage.photopicker.activity.PickImageActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar"/>
        
    </application>


</manifest>