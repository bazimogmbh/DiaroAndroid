<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/layoutRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageItem"
            android:layout_width="88.0dip"
            android:layout_height="88.0dip"
            android:padding="10.0dip"
            android:scaleType="centerCrop"
            android:src="@color/dark_grey_more" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_gravity="center|right|top"
            android:background="@drawable/cricle_white"
            android:padding="2.0dip"
            android:src="@drawable/sticker_ic_close_white_18dp"
            android:tint="@color/white_blur" />
    </FrameLayout>
</RelativeLayout>