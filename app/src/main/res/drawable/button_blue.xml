<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3e68cf" />

            <corners android:radius="3dp" />

            <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/diaro_default" android:startColor="@color/diaro_default" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />


        </shape>


    </item>

</selector>