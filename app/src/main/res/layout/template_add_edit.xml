<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar"
            app:theme="@style/MyToolbarStyle"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_side_padding"
                android:orientation="vertical">

                <!-- Name EditText -->
                <EditText
                    android:id="@+id/template_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:autofillHints=""
                    android:background="@android:color/transparent"
                    android:hint="@string/template_name"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textCapSentences"
                    android:maxLength="500"
                    android:minHeight="32dp"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <!-- Title EditText -->
                <EditText
                    android:id="@+id/template_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/entry_title"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textCapSentences"
                    android:maxLength="500"
                    android:minHeight="32dp"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:textStyle="bold" />


                <!-- Text EditText -->
                <com.pixelcrater.Diaro.layouts.LinedEditText
                    android:id="@+id/template_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/entry_text"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lineSpacingExtra="3dp"
                    android:maxLength="100000"
                    android:minLines="8"
                    android:padding="5dp"
                    android:textAppearance="@android:style/TextAppearance" />

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:layout_anchor="@id/entries_list"
            app:layout_anchorGravity="bottom|right|end"
            app:srcCompat="@drawable/ic_done_white_24dp"
            app:tint="@null" />

    </FrameLayout>

</LinearLayout>
