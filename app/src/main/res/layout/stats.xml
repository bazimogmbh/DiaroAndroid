<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/tvParent"
                layout="@layout/textview_arrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp" />

            <Spinner
                android:id="@+id/spinner_select_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:dropDownWidth="130dp" />
        </RelativeLayout>


        <!-- entry by weekday -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_entryDaily"
            app:cardCornerRadius="5dp"
            style="@style/StatsCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/text_view_margin_left"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_entryDaily"
                        style="@style/StatsChartInfoTV"
                        android:text="@string/entries_daily" />

                    <ImageButton
                        android:id="@+id/share_entryDaily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_share_white_24dp" />
                </RelativeLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bc_entryByDay"
                    android:layout_width="match_parent"
                    android:layout_height="230dp" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- entry by month -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_entryMonthly"
            app:cardCornerRadius="5dp"
            style="@style/StatsCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_entryMonthly"
                        style="@style/StatsChartInfoTV"
                        android:text="@string/entries_monthly" />

                    <ImageButton
                        android:id="@+id/share_entryMonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_share_white_24dp" />

                </RelativeLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lc_entryByMonth"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:padding="5dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- word by weekday -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_wordDaily"
            app:cardCornerRadius="5dp"
            style="@style/StatsCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/tv_wordDaily"
                        style="@style/StatsChartInfoTV"
                        android:text="@string/words_daily" />

                    <ImageButton
                        android:id="@+id/share_wordDaily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_share_white_24dp" />

                </RelativeLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bc_wordByDay"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:padding="5dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- word by month -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_wordMonthly"
            app:cardCornerRadius="5dp"
            style="@style/StatsCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/tv_wordMonthly"
                        style="@style/StatsChartInfoTV"
                        android:text="@string/words_monthly" />

                    <ImageButton
                        android:id="@+id/share_wordMonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_share_white_24dp" />

                </RelativeLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lc_wordByMonth"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:padding="5dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- mood count  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_moodCount"
            app:cardCornerRadius="5dp"
            style="@style/StatsCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/tv_moodCount"
                        style="@style/StatsChartInfoTV"
                        android:text="@string/mood_count" />

                    <ImageButton
                        android:id="@+id/share_moodCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_share_white_24dp" />

                </RelativeLayout>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pc_moodsCount"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- mood average -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_avgMood"
            app:cardCornerRadius="5dp"
            style="@style/StatsCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/tv_avgMood"
                        style="@style/StatsChartInfoTV"
                        android:text="@string/average_mood_per_day" />

                    <ImageButton
                        android:id="@+id/share_avgMood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_share_white_24dp" />

                </RelativeLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bc_avgMoodByDay"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:padding="5dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>