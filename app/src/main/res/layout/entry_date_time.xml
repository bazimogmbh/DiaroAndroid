<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_side_padding"
    android:layout_marginTop="@dimen/default_side_padding"
    android:layout_marginRight="@dimen/default_side_padding"
    android:baselineAligned="true"
    android:focusable="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/entry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|start"
        android:orientation="horizontal"
        android:paddingStart="0dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="17"
            android:textColor="?attr/lightBlackColor"
            android:textSize="38sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|start"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/date_weekday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="Sunday"
                android:textColor="?attr/lightBlackColor"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="October"
                    android:textColor="?attr/lightBlackColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/date_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:paddingStart="5dp"
                    android:singleLine="true"
                    android:text="2020"
                    android:textColor="?attr/lightBlackColor"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:id="@+id/entry_weatherParent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ripple"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|end"
        android:padding="5dp">

        <TextView
            android:id="@+id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="1dp"
            android:text="\uf00b"
            android:textColor="?attr/lightBlackColor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/weather_temprature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/weather_icon"
            android:text="28Â°C"
            android:textColor="?attr/lightBlackColor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather_icon"
            android:layout_alignParentStart="true"
            android:paddingStart="1dp"
            android:text="Scattered Clouds"
            android:textColor="?attr/lightBlackColor"
            android:textSize="9sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/entry_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ripple"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|end"
        android:padding="5dp">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="12.45"
            android:textColor="?attr/lightBlackColor"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>