<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_entry"
    app:cardCornerRadius="5dp"
    style="@style/StatsCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_large"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_smlarge">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@android:style/TextAppearance"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/folderColor"
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="@dimen/spacing_middle"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/spacing_middle"
                app:srcCompat="@drawable/shape_round_solid"
                app:tint="@color/light_green_500" />
        </RelativeLayout>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_large"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLength="200"
            android:maxLines="3"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                style="@style/EntryListIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                tools:text="Wed, 20 Jan 19, 05:08 PM" />


            <TextView
                android:id="@+id/yearsAgoInfo"
                style="@style/EntryListIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:text="3 Years Ago Today" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/entry_location"
                style="@style/EntryListIcons"
                tools:text="Hawaii" />

            <TextView
                android:id="@+id/entry_weather"
                style="@style/EntryListIcons"
                tools:text="08 Degree" />

            <TextView
                android:id="@+id/entry_mood"
                style="@style/EntryListIcons"
                tools:text="Awesome" />
        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>

