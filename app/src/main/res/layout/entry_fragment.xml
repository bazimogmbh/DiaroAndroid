<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/entry_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/entry_collapsing_photo_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/entry_photo_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax" />

            <com.pixelcrater.Diaro.entries.attachments.EntryPhotoPagerIndicator
                android:id="@+id/viewpager_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_collapseMode="parallax" />

            <View
                android:id="@+id/photo_pager_gradient"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

            <View
                android:id="@+id/photo_pager_fill"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/entry_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!--Folder color line-->

        <LinearLayout
            android:id="@+id/folder_color_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:background="@drawable/shadow"
            android:orientation="horizontal"
            android:visibility="gone" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_entry_scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fragment_pattern_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Date time TextView -->
                    <include
                        android:id="@+id/above_text_container"
                        layout="@layout/entry_date_time" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_side_padding"
                        android:orientation="vertical">

                        <!-- Title TextView -->
                        <TextView
                            android:id="@+id/entry_title_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:minHeight="32dp"
                            android:padding="5dp"
                            android:textAppearance="@android:style/TextAppearance"
                            android:textIsSelectable="false"
                            android:textStyle="bold" />

                        <!-- Text TextView -->
                        <TextView
                            android:id="@+id/entry_text_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:lineSpacingExtra="3dp"
                            android:minLines="10"
                            android:padding="5dp"
                            android:textAppearance="@android:style/TextAppearance" />

                        <!-- Title EditText -->
                        <EditText
                            android:id="@+id/entry_title_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textCapSentences"
                            android:maxLength="500"
                            android:minHeight="32dp"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textAppearance="@android:style/TextAppearance"
                            android:textStyle="bold" />

                        <!-- Text EditText -->
                        <com.pixelcrater.Diaro.layouts.LinedEditText
                            android:id="@+id/entry_text_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textMultiLine|textCapSentences"
                            android:lineSpacingExtra="3dp"
                            android:maxLength="1000000"
                            android:minLines="5"
                            android:padding="5dp"
                            android:textAppearance="@android:style/TextAppearance" />
                    </LinearLayout>

                    <!-- Folder, Tags, Mood, Location -->
                    <LinearLayout
                        android:id="@+id/below_text_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <!-- Folder -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/entry_folder_icon"
                                style="@style/EntryIconParamTextView"
                                android:fontFamily="@font/fontawesome_webfont"
                                android:text="@string/fa_folder" />

                            <TextView
                                android:id="@+id/entry_folder"
                                style="@style/EntryParamTextView" />

                        </LinearLayout>

                        <!-- Tags -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/entry_tags_icon"
                                style="@style/EntryIconParamTextView"
                                android:fontFamily="@font/fontawesome_webfont"
                                android:text="@string/fa_tag" />

                            <HorizontalScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fillViewport="true"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/entry_tags"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="@dimen/default_side_padding"
                                    android:gravity="center_vertical"

                                    android:orientation="horizontal" />

                            </HorizontalScrollView>

                        </LinearLayout>

                        <!-- Mood -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/entry_mood_icon"
                                style="@style/EntryIconParamTextView"
                                android:fontFamily="@font/fontawesome_webfont"
                                android:text="@string/fa_heartbeat" />

                            <TextView
                                android:id="@+id/entry_mood"
                                style="@style/EntryParamTextView"
                                android:layout_width="wrap_content" />

                        </LinearLayout>

                        <!-- Location -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/entry_location_icon"
                                style="@style/EntryIconParamTextView"
                                android:layout_marginStart="19dp"
                                android:layout_marginEnd="6dp"
                                android:fontFamily="@font/fontawesome_webfont"
                                android:text="@string/fa_map_marker" />

                            <HorizontalScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/default_side_padding"
                                android:fillViewport="true"
                                android:scrollbars="none">

                                <TextView
                                    android:id="@+id/entry_location"
                                    style="@style/EntryParamTextView"
                                    android:maxLines="2" />

                            </HorizontalScrollView>

                        </LinearLayout>

                        <!-- Google map -->
                        <FrameLayout
                            android:id="@+id/entry_map_view"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginLeft="@dimen/default_side_padding"
                            android:layout_marginRight="@dimen/default_side_padding"
                            android:paddingStart="3dp"
                            android:paddingEnd="3dp" />

                        <!--&lt;!&ndash; Entry photos &ndash;&gt;-->
                        <include
                            android:id="@+id/entry_photos"
                            layout="@layout/entry_photos" />
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/entry_editor_tools" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_switch_photo_view"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:layout_anchor="@id/entry_appbar"
        app:layout_anchorGravity="bottom|right"
        app:layout_collapseMode="parallax"
        app:srcCompat="@drawable/ic_grid_white_24dp"
        app:tint="@null" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>