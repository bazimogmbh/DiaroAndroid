<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Navigation -->

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- Today -->

            <TextView
                android:id="@+id/today"
                style="@style/CalendarNavigationItem"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="@string/today"
                android:textColor="@color/grey_600"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Select month -->

        <ImageButton
            android:id="@+id/previous_month"
            style="@style/CalendarNavigationItem"
            android:src="@drawable/ic_keyboard_arrow_left_18dp" />

        <TextView
            android:id="@+id/month_label"
            style="@style/CalendarNavigationItem"
            android:maxLength="3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:ellipsize="none"
            android:gravity="center"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/grey_600"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/next_month"
            style="@style/CalendarNavigationItem"
            android:src="@drawable/ic_keyboard_arrow_right_18dp" />

        <!-- Select year -->

        <ImageButton
            android:id="@+id/previous_year"
            style="@style/CalendarNavigationItem"
            android:src="@drawable/ic_keyboard_arrow_left_18dp" />

        <TextView
            android:id="@+id/year_label"
            style="@style/CalendarNavigationItem"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:ellipsize="none"
            android:gravity="center"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/grey_600"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/next_year"
            style="@style/CalendarNavigationItem"
            android:src="@drawable/ic_keyboard_arrow_right_18dp" />
    </LinearLayout>

    <!-- Weekdays headers -->

    <LinearLayout
        android:id="@+id/weekdays_headers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="1dp">

        <TextView style="@style/DayHeader" />

        <TextView style="@style/DayHeader" />

        <TextView style="@style/DayHeader" />

        <TextView style="@style/DayHeader" />

        <TextView style="@style/DayHeader" />

        <TextView style="@style/DayHeader" />

        <TextView style="@style/DayHeader" />
    </LinearLayout>

    <!-- Days -->

    <LinearLayout
        android:id="@+id/days_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="1dp">

        <include layout="@layout/calendar_days_row" />

        <include layout="@layout/calendar_days_row" />

        <include layout="@layout/calendar_days_row" />

        <include layout="@layout/calendar_days_row" />

        <include layout="@layout/calendar_days_row" />

        <include layout="@layout/calendar_days_row" />
    </LinearLayout>

    <!-- Calendar range fields -->
    <include layout="@layout/calendar_range_fields" />

</LinearLayout>