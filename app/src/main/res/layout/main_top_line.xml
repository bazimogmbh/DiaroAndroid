<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_1"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/top_line_search"
                style="@style/TopLineText"
                app:drawableLeftCompat="@drawable/ic_search_white_18dp" />

            <TextView
                android:id="@+id/top_line_calendar"
                style="@style/TopLineText"
                app:drawableLeftCompat="@drawable/ic_today_white_18dp" />

            <TextView
                android:id="@+id/top_line_folder"
                style="@style/TopLineText"
                app:drawableLeftCompat="@drawable/ic_folder_white_18dp" />

            <TextView
                android:id="@+id/top_line_tags"
                style="@style/TopLineText"
                app:drawableLeftCompat="@drawable/ic_tag_white_18dp" />

            <TextView
                android:id="@+id/top_line_locations"
                style="@style/TopLineText"
                app:drawableLeftCompat="@drawable/ic_place_white_18dp" />

            <TextView
                android:id="@+id/top_line_moods"
                style="@style/TopLineText"
                app:drawableLeftCompat="@drawable/ic_mood" />
        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/top_line_count"
        style="@style/TopLineText"
        app:drawableLeftCompat="@drawable/ic_edit_white_18dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/top_line_clear_all"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ripple"
        android:clickable="true"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:src="@drawable/ic_close_white_18dp"
        android:visibility="gone"
        android:focusable="true" />

</LinearLayout>