<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/dateLayout"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/dateTitle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/date"
            android:textAppearance="@android:style/TextAppearance"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/dateTitle"
            android:text="12th July 2019, 18:55"
            android:textAppearance="@android:style/TextAppearance" />

        <CheckBox
            android:id="@+id/dateTimeCBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationLayout"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/locationTitle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/location"
            android:textAppearance="@android:style/TextAppearance"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/locationTitle"
            android:layout_toStartOf="@+id/locationCBox"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="18.51334, 26.99045,18.51334, 6.99045,18.51334,6.99045,18.51334,26.99045,18.51334, 26.99045"
            android:textAppearance="@android:style/TextAppearance" />

        <CheckBox
            android:id="@+id/locationCBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="true" />
    </RelativeLayout>

</LinearLayout>

